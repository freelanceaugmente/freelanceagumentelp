<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="silverRingGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#F5F5F5;stop-opacity:0.9" />
      <stop offset="30%" style="stop-color:#E8E8E8;stop-opacity:0.8" />
      <stop offset="60%" style="stop-color:#C0C0C0;stop-opacity:0.7" />
      <stop offset="100%" style="stop-color:#A8A8A8;stop-opacity:0.6" />
    </radialGradient>
    <filter id="silverRingShadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="0" dy="2" stdDeviation="4" flood-color="rgba(168, 168, 168, 0.4)"/>
    </filter>
  </defs>

  <!-- Anneau externe argenté -->
  <circle cx="200" cy="200" r="180" fill="none" stroke="url(#silverRingGradient)" stroke-width="20" filter="url(#silverRingShadow)"/>

  <!-- Anneau interne pour la profondeur -->
  <circle cx="200" cy="200" r="160" fill="none" stroke="#C0C0C0" stroke-width="2" opacity="0.7"/>

  <!-- Highlights argentés -->
  <circle cx="200" cy="200" r="180" fill="none" stroke="rgba(255,255,255,0.4)" stroke-width="1" stroke-dasharray="8,15" opacity="0.8"/>

  <!-- Reflet métallique -->
  <ellipse cx="200" cy="120" rx="140" ry="35" fill="none" stroke="rgba(255,255,255,0.5)" stroke-width="12" opacity="0.7"/>
</svg>
